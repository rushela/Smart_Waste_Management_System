{
  "info": {
    "name": "Smart Waste Backend - Reports",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "<paste_jwt_here>" },
    { "key": "userId", "value": "000000000000000000000000" }
  ],
  "item": [
    {
      "name": "Summary",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/reports/summary?from=&to=&area=&wasteType=",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "summary"],
          "query": [
            { "key": "from", "value": "" },
            { "key": "to", "value": "" },
            { "key": "area", "value": "" },
            { "key": "wasteType", "value": "" }
          ]
        }
      }
    },
    {
      "name": "Trends",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/reports/trends?granularity=monthly",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "trends"],
          "query": [ { "key": "granularity", "value": "monthly" } ]
        }
      }
    },
    {
      "name": "Route Efficiency",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/reports/route-efficiency",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "route-efficiency"]
        }
      }
    },
    {
      "name": "User Report",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/reports/user/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "user", "{{userId}}"]
        }
      }
    },
    {
      "name": "Payments",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/reports/payments",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "payments"]
        }
      }
    },
    {
      "name": "Export CSV",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/reports/export/excel",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "export", "excel"]
        }
      }
    },
    {
      "name": "Export PDF",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/reports/export/pdf",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "export", "pdf"]
        }
      }
    },
    {
      "name": "Config - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Monthly North Area\",\n  \"filters\": { \"area\": \"North\" },\n  \"dateRange\": { \"from\": \"2025-01-01\", \"to\": \"2025-12-31\" }\n}" },
        "url": {
          "raw": "{{baseUrl}}/api/reports/config",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "config"]
        }
      }
    },
    {
      "name": "Config - List",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/reports/config",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "config"]
        }
      }
    }
  ]
}
